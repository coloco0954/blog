---
import Layout from '../layouts/LayoutForm.astro';
---

<Layout title='Iniciar sesion'>
        <div class="flex items-center justify-center h-[62vh] md:h-[90vh] mt-10 md:mt-0">
            <div class="p-8 rounded-md bg-white dark:bg-indigo-800 dark:text-gray-200">
                <h2 class="text-5xl font-bold text-center mb-6">Iniciar sesion</h2>
                <div class="flex flex-col gap-4">
                    <label for="" class="mt-2">Usuario</label>
                    <input type="text" placeholder="jhon123" class="p-2 border border-gray-500 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 dark:text-black transition-all duration-400 ease-out">
                    <label for="" class="mt-2">Correo Electronico</label>
                    <input type="email" placeholder="correo@correo.com" class="p-2 border border-gray-500 rounded-md focus:outline-none focus:ring-1 dark:text-black focus:ring-blue-700 transition-all duration-400 ease-out">
                    <label for="" class="mt-2">Contraseña</label>
                    <input type="password" name="" id="" placeholder="Contraseña" class="p-2 border border-gray-500 rounded-md focus:outline-none focus:ring-1 dark:text-black focus:ring-blue-700 transition-all duration-400 ease-out">
                    <button class="mt-2 h-10 bg-blue-500 dark:bg-blue-700 rounded-lg w-52 mx-auto text-white dark:hover:bg-blue-500 hover:bg-blue-600 transition-all duration-150">Iniciar sesion</button>
                    <div class="flex gap-2">
                        <p>Aun no tienes una cuenta?</p>
                        <a href="/sign_up" class="text-blue-600 dark:text-teal-400">Registrate</a>
                    </div>
                </div>
            </div>
        </div>
</Layout>

<script src="../js/dark_mode.js"></script>