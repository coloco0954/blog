---
import Layout from '../layouts/LayoutForm.astro';
---

<Layout title="Registro">
    <div class="flex justify-center items-center  h-[62vh] md:h-[90vh] mt-14 md:mt-0">
        <div class="p-8 rounded-md bg-white mt-3 mx-3 my-2 dark:bg-indigo-800 dark:text-gray-200">
            <h1 class="text-5xl font-bold text-center mb-6">Registro</h1>

            <div class="grid grid-cols-2 grid-rows-7 gap-4">
                <label for="" class="mt-2">Usuario</label>
                <label class="mt-2">Nombre</label>
                <input type="text" placeholder="john123" class="p-2 border border-gray-500 dark:text-black rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 transition-all duration-400 ease-out">
                <input type="text" placeholder="John Doe" class="p-2 border border-gray-500 dark:text-black rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 transition-all duration-400 ease-out">
                <label for="" class="mt-2">Apellidos</label>
                <label for="" class="mt-2">Contrase√±a</label>
                <input type="text" placeholder="Apellidos" class="p-2 border border-gray-500 dark:text-black rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 transition-all duration-400 ease-out">
                <input type="password" class="p-2 border border-gray-500 dark:text-black rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 transition-all duration-400 ease-out">
                <label>Correo Electronico</label>
                <label>Telefono</label>
                <input type="email" placeholder="correo@correo.com" class="p-2 border border-gray-500 dark:text-black rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 transition-all duration-400 ease-out">
                <input placeholder="123456" class="p-2 border border-gray-500 dark:text-black rounded-md focus:outline-none focus:ring-1 focus:ring-blue-700 transition-all duration-400 ease-out">
                <button class="col-span-2 bg-blue-500 dark:bg-blue-700 rounded-lg w-52 mx-auto text-white hover:bg-blue-600 transition-all duration-150  dark:hover:bg-blue-500">Crear cuenta</button>
            </div>
            <div class="flex gap-1 mt-3 justify-center">
                <p>Ya tienes una cuenta?</p>
                <a href="/login" class="text-blue-600  dark:text-teal-400">Inciar sesion</a>
            </div>
        </div>
    </div>
    
    <script src="../js/dark_mode.js"></script>
</Layout>